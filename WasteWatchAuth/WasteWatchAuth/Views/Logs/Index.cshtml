@model IEnumerable<WasteWatchAuth.Models.ActivityLog>

@{
	ViewData["Title"] = "Registo de Atividades";
}

<h2>Registo de Atividades</h2>

<table class="table">
	<thead>
		<tr>
			<th>Timestamp</th>
			<th>Usuário</th>
			<th>Ação</th>
			<th>Metadata</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var log in Model)
		{
			<tr>
				<td>@log.Timestamp.ToString("dd/MM/yyyy HH:mm:ss")</td>
				<td>@(log.UserId ?? "Desconhecido")</td>
				<td>@log.Action</td>
				<td>@log.Metadata</td>
			</tr>
		}
	</tbody>
</table>
